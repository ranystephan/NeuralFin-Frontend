{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "RAILWAY_DOCKERFILE_PATH": "Dockerfile",
    "NO_NIXPACKS": "true"
  }
} 